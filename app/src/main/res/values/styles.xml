<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue_aqua</item>
        <item name="colorPrimaryDark">@color/blue_glacier</item>
        <item name="colorAccent">@color/blue_sky</item>
    </style>

    <!-- Base application theme. -->
    <style name="DietTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/blue_aqua</item>
        <item name="colorPrimaryDark">@color/blue_glacier</item>
        <item name="colorAccent">@color/blue_sky</item>
    </style>

    <style name="TextAppearance.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#555555</item>
    </style>

    <style name="TextAppearance.SubTitle" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#555555</item>
    </style>

    <style name="TextAppearance.SubTitleCasual" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#555555</item>
        <item name="fontFamily">casual</item>
    </style>

    <style name="SpinnerTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#555555</item>
        <item name="android:fontFamily">casual</item>
    </style>
</resources>